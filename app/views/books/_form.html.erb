        <%= f.label :lended_at %>
        <%= f.datetime_select :lended_at %>
    </div>

    <div class= "form-group">
        <%= f.label :returned_at %>
        <%= f.datetime_select :returned_at %>
    </div>

    <div class= "actions">
        <%= f.submit %>
    </div>
  </div>
<% end %>